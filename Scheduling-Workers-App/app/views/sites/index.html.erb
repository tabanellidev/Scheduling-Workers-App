
<% content_for :title, "Cantieri" %>

<br>
<div class="container">
  <div class="row">
    <div class="col-md-7 align-self-center">
      <h1> Lista di Cantieri </h1>
    </div>
    <div class="col-md-5 align-self-center">
      <div class="btn-toolbar">
        <%= button_to "Crea Cantiere", new_site_path, method: :get, class: "btn btn-outline-primary "   %>
      </div>
    </div>
  </div>
</div>

<br>
<div class="container">
  <div class="row">
    <div class="col-md-11 ">

        <input type="text" class="form-control"  type="text" id="searchInputSite" placeholder="Ricerca...">

        <br>
        <table class="table table-striped table-hover table-bordered" id ="dataTableSite">
          <thead>
          <tr>
              <th style="width:5%" scope="col">#</th>
              <th style="width:20%" scope="col">Anagrafica</th>
              <th style="width:15%" scope="col">Referente</th>
              <th style="width:10%" scope="col">Città</th>
              <th style="width:15%"scope="col">Email</th>
              <th style="width:15%" scope="col">Telefono</th>
              <th style="width:5%" scope="col">Info</th>
          </tr>
          </thead>
          <% @sites.each do |site| %>
              <tr>
                  <td  class="align-baseline"> <h6> <%= site.id %> </h6> </td>
                  <td  class="align-baseline"> <h6> <%= site.nome %> </h6> </td>
                  <td  class="align-baseline"> <h6> <%= site.owner %> </h6> </td>
                  <td  class="align-baseline"> <h6> <%= site.location %> </h6> </td>

                  <td  class="align-baseline"> <h6> <%= site.email %> </h6> </td>
                  <td  class="align-baseline"> <h6> <%= site.phone %> </h6> </td>

                  <td> <%= button_to "Info", {action: "show", id: site.id}, method: :get, class: "btn btn-outline-primary" %> </td>


              </tr>
          <% end %>
      </table>
      <span id="noMatchSites" style="display:none;">
            Nessun dato è stato trovato
      </span>
    </div>
    
  </div>
</div>


<%= javascript_include_tag 'searchSite', 'data-turbo-track': 'reload' %>