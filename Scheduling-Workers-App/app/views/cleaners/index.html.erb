<% content_for :title, "Addetti" %>

<br>
<div class="container">
  <div class="row">
    <div class="col-md-7 align-self-center">
      <h1> Lista di Addetti </h1>
    </div>
    <div class="col-md-5 align-self-center">
      <div class="btn-toolbar">
        <td> <%= button_to "Crea Addetto", new_cleaner_path, method: :get, class: "btn btn-outline-primary "   %> </td>
      </div>
    </div>
  </div>
</div>

<br>
<div class="container">
  <div class="row">
    
    <div class="col-md-13 ">
        <input type="text" class="form-control"  type="text" id="searchInputCleaner" placeholder="Ricerca...">

        <br>
        <table class="table table-striped table-hover table-bordered" id="dataTableCleaner" style="width:100%">
          <thead>
          <tr>
              <th style="width:5%" scope="col" >#</th>
              <th style="width:25%" scope="col">Nominativo</th>
              <th style="width:20%" scope="col">Codice Fiscale</th>
              <th scope="col">Assunzione</th>
              <th style="width:20%" scope="col">Residenza</th>
              <th style="width:5%" scope="col">Patente</th>
              <th style="width:5%" scope="col">Ore</th>
              <th scope="col">Info</th>
          </tr>
          </thead>
          <% @cleaners.each do |cleaner| %>
              <tr>
                  <td  class="align-baseline"> <h6> <%= cleaner.internaln %> </h6> </td>
                  <td  class="align-baseline"> <h6> <%= cleaner.name %> <%= cleaner.surname %> </h6> </td>
                  <td  class="align-baseline"> <h6> <%= cleaner.codfis %> </h6> </td>
                  <td  class="align-baseline"> <h6> <%= cleaner.hired %> </h6> </td>
                  <td  class="align-baseline"> <h6> <%= cleaner.residence %> </h6> </td>
                  <td  class="align-baseline"> <h6> <%= cleaner.license %> </h6> </td>
                  <td  class="align-baseline"> <h6> <%= cleaner.hours_required %> </h6> </td>

                  <td> <%= button_to "Info", {action: "show", id: cleaner.id}, method: :get, class: "btn btn-outline-primary" %> </td>
              </tr>
          <% end %>
      </table>
      <span id="noMatchCleaners" style="display:none;">
            Nessun dato Ã¨ stato trovato
      </span>
    </div>
    
  </div>
</div>


<% javascript_include_tag 'searchCleaner', 'data-turbo-track': 'reload' %>