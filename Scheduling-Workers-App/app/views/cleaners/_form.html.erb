<div class="container">
  <div class="row">
    <div class="col-md-7 ">

      <%= form_with model: cleaner do |form| %>

     <div class="form-group">
        <% invalid = cleaner.errors.include?(:internaln) %>

        <%= form.label "Numero Interno" %><br>
        <%= form.number_field :internaln, class: "form-control #{'is-invalid' if invalid}", placeholder: "Inserisci Numero Interno" %>
        <% cleaner.errors.full_messages_for(:internaln).each do |message| %>
          <div class="invalid-feedback d-block"> <%= message %> </div>
        <% end %>
      </div>

